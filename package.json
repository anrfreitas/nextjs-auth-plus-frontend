    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-environment-jsdom": "^27.3.0",
    "lint-staged": "^12.4.1",
    "postcss": "^8.4.21",
    "prettier": "^2.3.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.2.4",
    "ts-jest": "^27.1.4"
  },
